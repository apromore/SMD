        <class>org.apromore.dao.model.EdgeAttribute</class>
        <class>org.apromore.dao.model.ResourceRefType</class>
        <class>org.apromore.dao.model.ResourceRefTypeAttribute</class>
        <class>org.apromore.dao.model.ObjectRefType</class>
        <class>org.apromore.dao.model.ObjectRefTypeAttribute</class>
        <class>org.apromore.dao.model.ResourceType</class>
        <class>org.apromore.dao.model.ObjectType</class>

        <!-- JPQL Named Query XML Definiation Files -->
        <mapping-file>META-INF/jpql/queries.xml</mapping-file>
