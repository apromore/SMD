        <class>org.apromore.dao.model.TempVersion</class>
        <class>org.apromore.dao.model.User</class>

        <!-- Version control tables -->
        <class>org.apromore.dao.model.Content</class>
        <class>org.apromore.dao.model.Edge</class>
        <class>org.apromore.dao.model.FragmentVersion</class>
